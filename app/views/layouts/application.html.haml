!!! 5
%html{:lang => 'fr', :class => 'no-js'}
	%head
		%meta{ :charset => 'utf-8' }
		/[if IE]
		%title The Godwin Project
		%meta{ :name => 'author', :content => 'Romain Muller, Thibault Milan' }
		%meta{ :name => 'viewport', :content => 'width=device-width; initial-scale=1.0; maximum-scale=1.0;' }
		
		= stylesheet_link_tag 'reset'
		= stylesheet_link_tag 'handheld', :media => 'handheld'
		= javascript_include_tag 'modernizr-1.5.min'
		= csrf_meta_tag
		
	= conditional_body do
		#container
			%header
			#main
				= yield
			%footer
		= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'
		= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js'
		:javascript
			if(!window.jQuery){
				document.write('#{javascript_include_tag('jquery-1.4.2.min').gsub(%r{</script>}, '<//script>')}');
				document.write('#{javascript_include_tag('jquery-ui-1.8.5.min').gsub(%r{</script>}, '<//script>')}');
			}
		= javascript_include_tag 'rails'
		/[if lt IE 7]
			= javascript_include_tag 'dd_belatedpng'
		- if Rails.env.development?
			= javascript_include_tag 'profiling/yahoo-profiling.min', 'profiling/config'